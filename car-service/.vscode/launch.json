    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Invoke-All-Mocha-Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "",
            "args": [
              "--no-timeouts",
              "--colors",
              "${workspaceFolder}/src/**/*.test.ts",
              "--require",
              "ts-node/register"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Invoke-Mocha-File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "",
            "args": [
              "--no-timeouts",
              "--colors",
              "${file}",
              "--require",
              "ts-node/register"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
         
        {
            "type": "node",
            "request": "launch",
            "name": "RunMyNestApp",
            "cwd": "${workspaceRoot}",
            "args": [ "${workspaceRoot}\\src\\main.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "protocol": "inspector"
            //"envFile": "${workspaceFolder}/config.env"
            // "env": {
            //     "mongo_connection_string": "mongodb://localhost:37017,localhost:37018,localhost:37019/avitests?replicaSet=rs0"
            // }  
            
        },
        {
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            // "runtimeArgs": [
            //     "--nolazy"
            // ],
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeExecutable": null,
            "stopOnEntry": false,
            "name": "debug-nest",
            //"preLaunchTask": "compile",
            "program": "${workspaceFolder}\\src\\main.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true
         }
    ]
    
}